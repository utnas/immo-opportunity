<div class="container">
  <div class="container-fluid">
    <div class="row">
      <!-- Creation form -->
        <div class="col-md-4">
          <h3>Building information</h3>
          <br/>
          <div class="form-group">
            {{input type="text" class="form-control" value=name disabled=entryNotAllowed placeholder="Flat name"}}
          </div>
          <div class="form-group">
            {{input type="number" class="form-control" value=type disabled=entryNotAllowed placeholder="Plex type"}}
          </div>
          <div class="form-group">
           {{input type="number" class="form-control" value=sellingPrice disabled=entryNotAllowed placeholder="Selling price"}}
         </div>
          <div class="form-group">
            {{input type="number" class="form-control" value=numberOfFlats disabled=entryNotAllowed placeholder="Number of flats"}}
          </div>
          <div class="form-group">
            {{input type="number" class="form-control" value=propertyTax disabled=entryNotAllowed placeholder="Property tax"}}
          </div>
          <div class="form-group">
            {{input type="number" class="form-control" value=schoolTax disabled=entryNotAllowed placeholder="School Tax"}}
          </div>
          <div class="form-group">
            {{input type="number" class="form-control" value=annualGrossRent disabled=entryNotAllowed placeholder="Annual gross rent"}}
          </div>
          <div class="form-group">
            {{textarea class="form-control" value=description placeholder="Description" rows="4"}}
          </div>
          <button class="btn btn-primary btn-block" {{action "create" post}}>Create building</button>
        </div>
      <!-- End reation form -->
      <!-- Opportunity checking  -->
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-12">

                <h4 class="text-center">
                  <span class="label label-primary">Check opportunity when owner occupying</span>
                </h4>
                <br/>

              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Multiplier of gross revenu</th>
                    <th>Price per appartment</th>
                    <th>Net value of rental</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><span class="label label-danger">1223.34</span></td>
                    <td><span class="label label-warning">1223.34</span></td>
                    <td><span class="label label-danger">1223.34</span></td>
                  </tr>
                  <tr>
                    <td><span class="label label-success">1223.34</span></td>
                    <td><span class="label label-warning">1223.34</span></td>
                    <td><span class="label label-success">1223.34</span></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <h4 class="text-center">
                <span class="label label-primary">Check opportunity when owner not occupying</span>
              </h4>
              <br/>
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Multiplier of gross revenu</th>
                    <th>Price per appartment</th>
                    <th>Net value of rental</th>
                  </tr>
                </thead>
                <tbody>
                  <tr >
                    <td><span class="label label-success">1223.34</span></td>
                    <td><span class="label label-success">1223.34</span></td>
                    <td><span class="label label-success">1223.34</span></td>
                  </tr>
                  <tr>
                    <td><span class="label label-success">1223.34</span></td>
                    <td><span class="label label-success">1223.34</span></td>
                    <td><span class="label label-success">1223.34</span></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <!-- End opportunity checking  -->
    </div>
  </div>
</div>
